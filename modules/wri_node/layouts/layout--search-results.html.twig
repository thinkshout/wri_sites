{#
/**
 * @file
 * Display Suite Search Results template.
 *
 * Available variables:
 * - ds_content_wrapper: wrapper around content
 * - attributes: content region attributes
 * - ds_content: content region
 */
#}

<div {{ attributes.addClass('ds-1col', 'clearfix', 'search-results-container', 'margin-bottom-sm') }}>
  {{ title_suffix.contextual_links }}
  {% if content %}
    <div class="search-results-tags">
      {% if content.field_region|render or content.field_primary_topic|render %}
        <div class="tags">
          <div class="topic-tag">{{ content.field_primary_topic }}</div>
          <div class="topic-tag">{{ content.field_region }}</div>
        </div>
      {% endif %}
      {% if content.field_type %}
        <span class="content-type-region bundle">
          {{ content.field_type }}
        </span>
      {% endif %}
    </div>
    <div class="search-results-text">
      {% if content.field_resource_type or content.node_post_date %}
        <div>
          {% if content.field_resource_type %}
              {{ content.field_resource_type }}
          {% endif %}
          {% if content.node_post_date %}
              <span class="post-date">{{ content.node_post_date }}</span>
          {% endif %}
        </div>
      {% endif %}
      {% if content.node_title %}
        {{ content.node_title }}
      {% endif %}
      {% if content.field_tags  %}
        <div class="tags">
          {{ content.field_tags }}
        </div>
      {% endif %}
    </div>
    <div class="search-results-image">
      {% if content.field_main_image %}
        {{ content.field_main_image }}
      {% endif %}
      <div class="tags">
        {{ content.field_tags }}
      </div>
    </div>
  {% endif %}
</div>
