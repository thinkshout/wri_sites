<div {{ attributes.addClass('ds-1col', 'clearfix') }}>

  {# Header nav #}
  {% if use_microsite_nav %}
    {% include '@ts_wrin/_includes/_microsite-header.html.twig' %}
  {% endif %}
  {{ title_suffix.contextual_links }}

  {# New marquee hero #}
  <div class="pfp-hero">

    {# Image background #}
    <div class="pfp-hero__background-image">
      {% if content.hero_image %}
        {{ content.hero_image }}
      {% endif %}
    </div>

    {# Content #}
    <div class="pfp-hero__content">

      {# Headline #}
      <div class="pfp-hero__headline">
        <h1>{{ content.title }}</h1>
      </div>

      {# Buttons #}
      {% if content.intro %}
      <div class="pfp-hero__buttons">
        <div>{{ content.intro }}</div>
      </div>
      {% endif %}
    </div>
  </div>
</div>
{% if content.content|render|striptags|trim is not empty %}
  <div class="landing-page__hero__field-listing__mobile container content-side-padding padding-vertical white">
    {{ content.content }}
  </div>
{% endif %}
